    <script>
      function copyToClipboard(contentId) {
        const content = document.getElementById(contentId).innerText.trim();
        navigator.clipboard
          .writeText(content)
          .then(() => {
            alert('Copied to clipboard!');
          })
          .catch((err) => {
            alert('Failed to copy: ' + err);
          });
      }
    </script>
